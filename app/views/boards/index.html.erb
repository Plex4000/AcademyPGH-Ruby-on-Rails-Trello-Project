
<% if(@boards_empty != true) %>
<h2>My Boards</h2>
  <% @boards.each do |board| %>
    <div><%= board.title %> <%= link_to 'Edit', edit_board_path(board) %> | <%= link_to 'Show', board_path(board) %> | <%= link_to 'Destroy', board_path(board),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></div>
  <% end %>
<% else %>
<h2> There are no boards to display. Please create one. </h2>
<% end %>

    <h3>Create a new board</h3>
    <%= form_for @board do |f| %>
      <%= f.label :name %>
        <%= f.text_field :title%><br>
        <%= f.submit "Create" %>
    <% end %>